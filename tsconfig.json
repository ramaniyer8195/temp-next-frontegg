{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "preserve",
    "isolatedModules": true, // This mandatory change is added by next.js when script "npm run dev" is run(Requirement for babel),
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.{ts, tsx}"
  ],
  "exclude": [
    "node_modules"
  ]
}
